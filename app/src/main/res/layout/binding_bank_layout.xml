<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/toobar_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:textColor="@color/black_63"
            android:textSize="12sp"
            android:text="预留手机号"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tv"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black_63"
            android:textSize="12sp"
            android:text="18616803911"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/gray_f2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="29dp"
        android:paddingTop="15dp"
        android:layout_marginRight="29dp"
        android:layout_height="50dp">
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/black_63"
            android:textSize="14sp"
            android:hint="用户姓名"
            android:gravity="center_vertical"
            android:textColorHint="@color/gray_69"
            android:background="@color/white"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="29dp"
        android:paddingTop="15dp"
        android:layout_marginRight="29dp"
        android:layout_height="50dp">
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/black_63"
            android:textSize="14sp"
            android:hint="身份证号码"
            android:gravity="center_vertical"
            android:textColorHint="@color/gray_69"
            android:background="@color/white"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_sel"
        android:layout_width="match_parent"
        android:layout_marginLeft="29dp"
        android:paddingTop="15dp"
        android:layout_marginRight="29dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black_63"
            android:textSize="14sp"
            android:hint="预留手机号"
            android:gravity="center_vertical"
            android:textColorHint="@color/gray_69"
            android:background="@color/white"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/right_bg"
            android:layout_marginRight="9dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/gray_f2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="29dp"
        android:paddingTop="15dp"
        android:layout_marginRight="29dp"
        android:layout_height="50dp">
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/black_63"
            android:textSize="14sp"
            android:hint="银行卡号"
            android:gravity="center_vertical"
            android:textColorHint="@color/gray_69"
            android:background="@color/white"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_out_login"
        android:background="@mipmap/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="53dp"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="@dimen/dp_40" />
</LinearLayout>