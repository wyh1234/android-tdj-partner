<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:layout_height="51dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/black_63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_grade_name"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/zhuanyuan"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/tv_grade_name"
                android:layout_below="@+id/tv_name"
                android:layout_toRightOf="@+id/iv_grade_name"
                android:textSize="12sp"
                android:textColor="@color/gray_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:drawablePadding="9dp"
                android:textSize="12sp"
                android:drawableLeft="@mipmap/call"
                android:textColor="@color/gray_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:src="@mipmap/right_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </LinearLayout>
    <View
        android:background="@color/gray_f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>