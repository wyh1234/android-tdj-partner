<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@mipmap/home_bg"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_height="128dp">
        <TextView
            android:id="@+id/tv_tiltle"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="城市合伙人"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="17dp"
            android:layout_below="@+id/tv_tiltle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_username"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/sp_12"
            android:text="你好，张三！"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/tv_username"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="7dp"
                android:text="09月04日  星期三"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_team"
                android:layout_marginRight="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/home_tuandui_shap"
                android:gravity="center"
                android:layout_width="92dp"
                android:layout_height="21dp">
                <ImageView
                    android:id="@+id/iv_tuandui"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/tuandui"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_tuandui"
                    android:text="团队概览"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="match_parent"
     >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>