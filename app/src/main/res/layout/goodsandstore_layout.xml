<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_f2"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@mipmap/client_bg"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="39dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/dp_40"
                android:src="@mipmap/back_home_one"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:text="商品/店铺"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>

    </RelativeLayout>
    <com.tdjpartner.widget.tablayout.WTabLayout
        android:id="@+id/wtab"
        android:layout_width="match_parent"
        app:xTabDisplayNum="2"
        android:layout_marginTop="-54dp"
        app:xTabIndicatorColor="@color/white"
        app:xTabIndicatorHeight="1dp"
        app:xTabIndicatorWidth="23dp"
        app:xTabSelectedTextColor="@color/white"
        app:xTabTextColor="#80ffffff"
        app:xTabTextSize="14sp"
        android:layout_height="25dp">

    </com.tdjpartner.widget.tablayout.WTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="match_parent"/>
</LinearLayout>