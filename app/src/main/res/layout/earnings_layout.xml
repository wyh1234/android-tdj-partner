<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_f2"
    android:layout_height="match_parent">
    <include layout="@layout/toobar_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_sy"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="41dp">
            <TextView
                android:id="@+id/tv_money"
                android:textStyle="bold"
                android:textSize="27sp"
                android:gravity="bottom"
                android:textColor="@color/view_bg1"
                android:text="1000.00"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/tv_money"
                android:textColor="@color/view_bg1"
                android:text="￥"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/tv_money"
            android:textColor="@color/gray_69"
            android:text="我的总收益（元）"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ky_money"
                    android:layout_width="match_parent"
                    android:textColor="@color/black_63"
                    android:textSize="16sp"
                    android:text="10000.00"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:text="可提现余额（元）"
                    android:textColor="@color/gray_69"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_below="@+id/tv_ky_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tx_money"
                    android:layout_width="match_parent"
                    android:textColor="@color/black_63"
                    android:textSize="16sp"
                    android:text="10000.00"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:text="已提现余额（元）"
                    android:textColor="@color/gray_69"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_below="@+id/tv_tx_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:background="@mipmap/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="提现"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="41dp" />

</LinearLayout>