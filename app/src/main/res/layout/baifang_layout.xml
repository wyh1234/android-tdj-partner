<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@mipmap/home_bg"
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="39dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/dp_40"
                android:src="@mipmap/back_home_one"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:text="我要拜访"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/daka_bg"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_dk"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title"
            android:layout_marginTop="7dp"
            android:background="@mipmap/daka_one"
            android:layout_width="83dp"
            android:layout_height="83dp">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="正常打卡"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_below="@+id/rl_dk"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="31dp" >
            <ImageView
                android:id="@+id/iv"
                android:src="@mipmap/gantanhao"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_laction_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/iv"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/gray_66"
                android:textSize="11sp" />
            <TextView
                android:layout_toRightOf="@+id/tv_laction_name"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:textColor="@color/view_bg1"
                android:textSize="11sp"
                android:gravity="center_vertical"
                android:text="重新定位"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="@color/gray_f2"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="门店名称"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/tv"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_69"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="拜访人"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ed_callName"
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_69"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系方式"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ed_callMobile"
            android:layout_toRightOf="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:inputType="number"
            android:textColor="@color/gray_69"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="请输入主要事宜"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ed_matters"
            android:layout_toRightOf="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:maxLength="200"
            android:textColor="@color/gray_69"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="请输入拜访结果"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ed_results"
            android:layout_toRightOf="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:maxLength="200"
            android:textColor="@color/gray_69"
            android:layout_height="match_parent" />
        <View
            android:background="@color/gray_f2"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/sahngchuantupian" />
        
    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        android:background="@mipmap/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="@dimen/dp_40" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>