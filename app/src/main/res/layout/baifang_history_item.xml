<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:background="@color/white"
    android:paddingLeft="11dp"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/iv"
             android:layout_width="33dp"
             android:scaleType="fitXY"
             android:layout_height="30dp"
             />
        <TextView
            android:id="@+id/tv_buyName"
            android:layout_toRightOf="@+id/iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:textSize="14sp"
            android:textColor="@color/black_63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_callName"
            android:layout_width="66dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@mipmap/wzd"
            android:gravity="center"
            android:layout_marginRight="-7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="25dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:paddingTop="11dp"
        android:paddingBottom="13dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:background="@drawable/order_item_sahp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_call_name_one"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_matters"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_results"
            android:textSize="12sp"
            android:textColor="@color/gray_66"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>