<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="76dp">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_centerVertical="true"
            android:layout_width="31dp"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_ani"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@mipmap/jijiangdiaoluo"
                />
            <TextView
                android:id="@+id/count_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_count_red"
                android:gravity="center"
                android:text="2"
                android:includeFontPadding="false"
                android:textColor="@color/view_bg1"
                android:textSize="9sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:text="收入通知"
            android:layout_toRightOf="@+id/rl"
            android:textSize="14sp"
            android:textColor="@color/black_63"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/gray_f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:text="今日收益"
            android:textSize="12sp"
            android:textColor="@color/gray_69"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:text="2019.08.13   8:00"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/gray_69"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>