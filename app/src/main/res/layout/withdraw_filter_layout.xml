<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_f2"
    android:layout_height="match_parent">
    <include layout="@layout/toobar_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        android:paddingTop="11dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="264dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray_66"
            android:text="提现现状"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:textColor="@color/gray_66"
            android:text="提现日期"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_time"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="21dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:text="开始日期"
                android:textColor="@color/black_63"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_star"
                android:layout_toRightOf="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="2018.06.16"
                android:textColor="@color/gray_69"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv1"
                android:layout_toRightOf="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="-  结束日期"
                android:textColor="@color/black_63"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_end"
                android:layout_toRightOf="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="2018.06.16"
                android:textColor="@color/gray_69"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn"
        android:background="@mipmap/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="41dp" />

</LinearLayout>