<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/hone_item_shap_one"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/sp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <View
                android:id="@+id/view"
                android:layout_centerVertical="true"
                android:layout_width="2dp"
                android:background="@color/view_bg1"
                android:layout_height="17dp"/>
            <ImageView
                android:id="@+id/iv_left"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/newzhuce_bg"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_toRightOf="@+id/rl"
                android:id="@+id/tv_tiltle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="当月统计"
                android:textSize="16sp"
                android:textColor="@color/black_63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toRightOf="@+id/tv_tiltle"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:visibility="gone"
                android:src="@mipmap/tishi_bg"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_right"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_height="20dp">
            <ImageView
                android:id="@+id/iv_xiala"
                android:src="@mipmap/xiala_bg"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_toLeftOf="@+id/iv_xiala"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_today"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:text="9月4日"
                    android:textSize="14sp"
                    android:textColor="@color/black_63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>