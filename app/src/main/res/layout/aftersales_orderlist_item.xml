<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/client_item_sahp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/iv"
                android:src="@mipmap/jiudain_bg"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv"
                android:text="酒店名称:"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray_69"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/iv_store_name"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray_66"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_staste"
                android:text="交易成功"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/view_bg1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/gray_f2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="54dp"
                android:src="@mipmap/goodsimage"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_height="54dp" />
            <LinearLayout
                android:layout_toRightOf="@+id/iv1"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:orientation="vertical"
                android:layout_height="54dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black_63"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_toRightOf="@+id/tv_goods_name"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/gray_69"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_tiltle"
                    android:layout_toRightOf="@+id/tv"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/view_bg1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:background="@mipmap/xiangqing_bg"
                    android:layout_marginTop="2dp"
                    android:textSize="9sp"
                    android:textColor="@color/view_bg1"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/order_item_sahp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:textSize="11sp"
                android:textColor="@color/gray_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_below="@+id/tv_time"
                android:id="@+id/line_item_bottom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易：" />

                <TextView
                    android:id="@+id/count_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元" />

                <TextView
                    android:id="@+id/after_sales_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="退款：" />

                <TextView
                    android:id="@+id/refund_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元" />

                <TextView
                    android:id="@+id/count_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="3" />

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="斤" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/order_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/r_round_rect_solid_white"
                        android:paddingStart="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="8dp"
                        android:text="进度查询" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>