<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="78dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="54dp"
        android:src="@mipmap/goodsimage"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_height="54dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/iv1"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:orientation="vertical"
        android:layout_height="54dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:text="冰红茶"
                android:textSize="12sp"
                android:textColor="@color/black_63"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:text="(惠友冰红茶特价促销)"
                android:textSize="12sp"
                android:textColor="@color/gray_69"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_toRightOf="@+id/tv"
            android:layout_width="wrap_content"
            android:text="11.99元/箱（24盒*250毫升）"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/view_bg1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="48dp"
            android:text="保鲜蔬"
            android:gravity="center"
            android:background="@mipmap/goodsimage_one"
            android:layout_marginTop="2dp"
            android:textSize="9sp"
            android:textColor="@color/gray_66"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>