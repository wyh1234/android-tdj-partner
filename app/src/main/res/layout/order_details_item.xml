<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:textSize="11sp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/order_details_item_shap"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_copys"
            android:textSize="12sp"
            android:text="复制"
            android:textColor="#ff0000"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/tv_order_no"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


<RelativeLayout
    android:layout_below="@+id/fl"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/iv1"
        android:layout_width="54dp"
        android:src="@mipmap/goodsimage"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_height="54dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/iv1"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:orientation="vertical"
        android:layout_height="54dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black_63"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_toRightOf="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray_69"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tiltle"
            android:layout_toRightOf="@+id/tv"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/view_bg1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:background="@mipmap/xiangqing_bg"
            android:layout_marginTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="9sp"
            android:textColor="@color/view_bg1"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
    <TextView
        android:id="@+id/tv_after"
        android:layout_width="66dp"
        android:gravity="center"
        android:background="@drawable/time_shap"
        android:textSize="10sp"
        android:layout_marginRight="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="23dp"/>
</RelativeLayout>