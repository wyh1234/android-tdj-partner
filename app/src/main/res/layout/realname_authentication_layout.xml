<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical">
    <include layout="@layout/toobar_layout" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="基本资料"
                android:textColor="@color/black_63"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/tv"
                android:text="（认证人、提现人、持银行卡人必须为同一人）"
                android:textColor="@color/gray_69"
                android:textSize="10sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/gray_f2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="真实姓名:"
                android:textColor="@color/black_63"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/tv1"
                android:text="张三"
                android:textColor="@color/black_63"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_sm"
                android:layout_width="@dimen/dp_40"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@color/view_bg1"
                android:gravity="center"
                android:text="已实名"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:src="@mipmap/tishi_bg" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/gray_f2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="身份证号码:"
                android:textColor="@color/black_63"
                android:textSize="@dimen/sp_14" />
            <EditText
                android:id="@+id/ed_idcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/tv2"
                android:background="@color/white"
                android:hint="请输入15或18位身份证号"
                android:textColor="@color/black_63"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray_69"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_idcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/tv2"
                android:background="@color/white"
                android:hint="请输入15或18位身份证号"
                android:textColor="@color/black_63"
                android:textColorHint="@color/gray_69"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black_63"
                    android:textSize="14sp"
                    android:text="上传身份证"
                    android:paddingLeft="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_height="43dp" />
                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/gray_f2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="178dp">
                    <ImageView
                        android:id="@+id/id_card_positive_iv"
                        android:layout_width="165dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/sfzz"
                        android:layout_height="116dp" />
                    
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="178dp">
                <ImageView
                    android:id="@+id/id_card_negative_iv"
                    android:layout_width="165dp"
                    android:src="@mipmap/sfzf"
                    android:scaleType="centerCrop"
                    android:layout_height="116dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn"
                android:background="@mipmap/login_btn"
                android:layout_width="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_height="40dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>