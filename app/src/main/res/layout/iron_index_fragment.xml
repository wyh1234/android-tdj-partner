<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_bg"
            android:paddingTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_tiltle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="淘大集创客"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tiltle"
                android:layout_marginTop="17dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="你好，李"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_username"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:text="1月1日 星期一"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_team"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="13dp"
                    android:gravity="right"
                    android:textSize="@dimen/sp_12">
                    <!--                <ImageView-->
                    <!--                    android:id="@+id/iv_tuandui"-->
                    <!--                    android:layout_centerVertical="true"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:src="@mipmap/tuandui"-->
                    <!--                    android:layout_height="wrap_content" />-->
                    <TextView
                        android:id="@+id/tv_heard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在城市："
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headLinearLayout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--日统计-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:background="@color/view_bg1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="日统计"
                            android:textColor="@color/black_63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_day_sink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="right"
                            android:text="M2 >"
                            android:textColor="@color/orage_red"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/day_listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--月统计-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:background="@color/view_bg1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="月统计"
                            android:textColor="@color/black_63"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_month_sink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="right"
                            android:text="M2 >"
                            android:textColor="@color/orage_red"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/member_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>


        <!--重点关注-->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/client_item_sahp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/swipeRefreshLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="重点关注"
                android:textColor="@color/gray_66"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/gray_f2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="28dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_drop"
                            android:layout_width="18dp"
                            android:layout_height="22dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="18dp"
                            android:src="@color/gray_e1" />

                        <TextView
                            android:id="@+id/count_drop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/sp_12"
                            android:background="@drawable/bg_count_red"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="2"
                            android:textColor="@color/view_bg1"
                            android:textSize="9sp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_drop"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="8dp"
                        android:text="即将掉落"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="28dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_sea"
                            android:layout_width="18dp"
                            android:layout_height="22dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="18dp"
                            android:src="@color/gray_e1" />

                        <TextView
                            android:id="@+id/count_sea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/sp_12"
                            android:background="@drawable/bg_count_red"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="2"
                            android:textColor="@color/view_bg1"
                            android:textSize="9sp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_sea"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="8dp"
                        android:text="公海跟进"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <!--排行榜-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/client_item_sahp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="排行榜"
                    android:textColor="@color/gray_66"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/orage_red"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="日"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="月"
                        android:textColor="@color/gray_66"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <com.tdjpartner.widget.tablayout.WTabLayout
                android:id="@+id/wtab"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/white"
                app:xTabDisplayNum="3"
                app:xTabIndicatorColor="@color/view_bg1"
                app:xTabIndicatorHeight="2dp"
                app:xTabIndicatorWidth="40dp"
                app:xTabSelectedTextColor="@color/view_bg1"
                app:xTabTextColor="@color/gray_66"
                app:xTabTextSize="14sp" />
            <!--                    <android.support.design.widget.TabLayout-->
            <!--                        android:layout_width="match_parent"-->
            <!--                        android:layout_height="wrap_content">-->

            <!--                        <android.support.design.widget.TabItem-->
            <!--                            android:layout_width="wrap_content"-->
            <!--                            android:layout_height="wrap_content"-->
            <!--                            android:text="AAA" />-->

            <!--                        <android.support.design.widget.TabItem-->
            <!--                            android:layout_width="wrap_content"-->
            <!--                            android:layout_height="wrap_content"-->
            <!--                            android:text="BBB" />-->
            <!--                    </android.support.design.widget.TabLayout>-->

            <android.support.v4.view.ViewPager
                android:id="@+id/ranking_vp"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="4dp" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>