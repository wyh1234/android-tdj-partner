<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="68dp">
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="1"
            android:id="@+id/tv_num"
            android:layout_marginTop="-4dp"
            android:textColor="@color/black_63"
            android:textSize="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="17dp"
            android:src="@mipmap/map_info_item_bg"
            android:layout_height="17dp" />

        <TextView
            android:text="范德萨fdsfdfdsfdsfdfd范"
            android:id="@+id/tv_tiltle"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/black_63"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/tv_regionCollNo"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/sp_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/tv_boss"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_10"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/call_hei_bg"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/sp_14"
            android:maxWidth="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="什么发的顺丰看的舒服可接受的"
        android:id="@+id/tv_address"
        android:layout_marginLeft="35dp"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/sp_12"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <View
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>

