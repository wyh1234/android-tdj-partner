<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/toobar_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="226dp">
        <ImageView
            android:layout_width="46dp"
            android:src="@mipmap/bank_right"
            android:layout_height="103dp" />
        <RelativeLayout
            android:layout_width="167dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/bnak_bg"
            android:layout_height="103dp">
            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv"
                android:textSize="15sp"
                android:text="****  ****  ****  "
                android:textColor="@color/white"
                android:layout_marginTop="54dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_accountno"
                android:layout_toRightOf="@+id/tv"
                android:textColor="@color/white"
                android:layout_marginTop="52dp"
                android:textSize="15sp"
                android:text="0912"
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="9dp"
                android:text="每日支付限额50000元"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:layout_width="46dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/bank_left"
            android:layout_height="103dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/binding_bank_iv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/lijishengqing"
            android:layout_marginRight="-20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>