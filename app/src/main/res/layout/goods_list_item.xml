<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="54dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/goodsimage"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_height="54dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/iv"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:orientation="vertical"
        android:layout_height="54dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black_63"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_toRightOf="@+id/tv"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_69"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tiltle"
            android:layout_toRightOf="@+id/tv"
            android:layout_width="wrap_content"
            android:text="11.99元/箱（24盒*250毫升）"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/view_bg1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:text="保鲜蔬"
            android:gravity="center"
            android:background="@mipmap/goodsimage_one"
            android:layout_marginTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="9sp"
            android:textColor="@color/gray_66"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>