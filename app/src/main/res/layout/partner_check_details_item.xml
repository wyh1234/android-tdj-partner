<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="19dp"
    android:paddingRight="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@mipmap/hongdian_bg" />

      <!--  <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="200dp"
            android:layout_below="@+id/iv_status"
            android:layout_marginLeft="10dp"
            android:background="#E5E5E5" />-->

            <TextView
                android:id="@+id/tv_nodeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/iv_status"
                android:gravity="center"
                android:textColor="@color/black_63"
                android:textSize="12sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_name"
            android:background="@drawable/ll_shap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="6dp"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="13dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:visibility="gone"
                android:text="周伟 186812231 提交申请"
                android:textColor="#666666"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_time"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#666666"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_isf"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/image_select_one"
                         />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/iv1"
                        android:gravity="center"
                        android:text="驳回"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_two"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="32dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/image_select_one" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/iv2"
                        android:gravity="center"
                        android:text="通过"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_bz"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_verifyRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="备注:"
                    android:textColor="#666666"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/ed_remark"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/tv_verifyRemark"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>