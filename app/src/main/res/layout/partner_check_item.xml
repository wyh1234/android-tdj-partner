<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"

        android:background="@color/gray_f2"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_63"
            android:text="负责人：张三"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/gray_66"
            android:text="希尔顿酒店（主账号）"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="周伟     18681222311"
                android:drawableLeft="@mipmap/dianhua_bg"
                android:drawablePadding="3dp"
                android:textColor="@color/gray_69"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginRight="3dp"
                android:text="2018.09.16    16:18:11"
                android:drawableLeft="@mipmap/shijian_bg"
                android:drawablePadding="3dp"
                android:textColor="@color/gray_69"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="15dp"
            android:text="武昌徐东大街100号"
            android:drawableLeft="@mipmap/dizhi_bg"
            android:drawablePadding="3dp"
            android:textColor="@color/gray_69"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_height="91dp">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/yingyezhao_bg"
                    android:scaleType="fitXY"
                    android:layout_height="71dp" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:text="形象照"
                    android:textSize="12sp"
                    android:textColor="@color/gray_66"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:src="@mipmap/yingyezhao_bg"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="71dp" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:text="营业照"
                    android:textSize="12sp"
                    android:textColor="@color/gray_66"
                    android:layout_height="20dp" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/check_item_hui_bg"
                android:gravity="center"
                android:textColor="@color/gray_66"
                android:textSize="14sp"
                android:text="待审核"
                android:layout_height="25dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>