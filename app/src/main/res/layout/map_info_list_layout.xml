<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="68dp">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_num"
            android:layout_marginTop="-4dp"
            android:textColor="@color/black_63"
            android:layout_alignParentTop="true"
            android:textSize="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv"
            android:layout_toRightOf="@+id/tv_num"
            android:layout_width="17dp"
            android:src="@mipmap/map_info_item_bg"
            android:layout_height="17dp" />

        <TextView
            android:text=""
            android:id="@+id/tv_tiltle"
            android:layout_toRightOf="@+id/iv"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black_63"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/tv_regionCollNo"
            android:layout_toRightOf="@+id/tv_tiltle"
            android:layout_marginLeft="9dp"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/sp_12"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/tv_boss"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/call_hei_bg"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/sp_14"
            android:maxWidth="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_toRightOf="@+id/iv"
            android:layout_below="@+id/tv_tiltle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/sp_12"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    </RelativeLayout>

