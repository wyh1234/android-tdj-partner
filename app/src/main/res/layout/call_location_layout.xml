<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_40"
            android:src="@mipmap/back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:text="拜访定位"
            android:layout_centerHorizontal="true"
            android:textColor="@color/gray_66"
            android:textSize="17sp" />
    </RelativeLayout>
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_below="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.amap.api.maps.MapView>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="49dp">
        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv"
                android:text="我的位置"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black_63"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_is"
                android:layout_toRightOf="@+id/tv"
                android:layout_centerVertical="true"
                android:textSize="9sp"
                android:textColor="@color/gray_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_kq"
                android:layout_toRightOf="@+id/tv_is"
                android:text="考勤范围"
                android:layout_centerVertical="true"
                android:textSize="9sp"
                android:textColor="#66CCFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_n"
                android:layout_toRightOf="@+id/tv_kq"
                android:text="内）"
                android:layout_centerVertical="true"
                android:textSize="9sp"
                android:textColor="@color/gray_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rl_one"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="12dp">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/dk_state_shap"
                android:textSize="9sp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_location_name"
                android:layout_toRightOf="@+id/tv_state"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:textSize="9sp"
                android:textColor="@color/gray_69"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>